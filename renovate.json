{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "schedule": ["after 10pm and before 5am every weekday", "every weekend"],
  "semanticCommitType": ":arrow_up: update",
  "semanticCommitScope": "deps",
  "packageRules": [
    {
      "updateTypes": ["major", "minor", "patch"],
      "semanticCommitType": ":arrow_up: chore"
    },
    {
      "updateTypes": ["pin"],
      "semanticCommitType": ":pushpin: pin"
    },
    {
      "updateTypes": ["rollback"],
      "semanticCommitType": ":arrow_down: rollback"
    },
    {
      "updateTypes": ["digest", "bump"],
      "semanticCommitType": ":arrow_up: bump"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "devDependencies (non-major)",
      "automerge": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "dependencies (non-major)"
    }
  ]
}
