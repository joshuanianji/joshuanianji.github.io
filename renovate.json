{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "pin",
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^actions/"
      ],
      "groupName": "github actions",
      "groupSlug": "github-actions"
    }
  ]
}